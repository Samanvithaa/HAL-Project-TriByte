<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guiding System</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="main-container">
        <div class="filter-form">
            <h3>Filter</h3>
            <form action="/" method="get">
                <div class="input-group">
                    <label for="search">Search:</label>
                    <input type="text" id="search" name="search" placeholder="Search guides">
                </div>
                <button type="submit" class="submit-btn">Apply Filters</button>
            </form>
        </div>

        <div class="categories">
            <h3>Top Rated Guides</h3>
            <div class="category-items">
                <% guides.forEach(function(guide) { %>
                    <a href="/guidedetails?profile=<%= guide.name %>" class="profile">
                        <img src="img/image.png" alt="<%= guide.name %>">
                        <p><%= guide.name %></p>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>
